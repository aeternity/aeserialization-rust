{
  "name": "aeser",
  "author": "Metin Akat <akat.metin@gmail.com>",
  "version": "0.0.1",
  "description": "JS/TS bindings for aeserialization",
  "type": "module",
  "files": [
    "lib/**/*.js",
    "lib/**/*.d.ts",
    "pkg/**/*.js",
    "pkg/**/*.d.ts",
    "pkg/**/*.wasm",
    "pkg/**/*.wasm.d.ts"
  ],
  "scripts": {
    "build:wasm-pack": "wasm-pack build --target nodejs --out-name index --out-dir ./pkg",
    "build:typescript": "tsc -b",
    "build": "pnpm run build:wasm-pack && pnpm run build:typescript",
    "package": "pnpm pack"
  },
  "devDependencies": {
    "typescript": "^5",
    "wasm-pack": "^0.12.1"
  },
  "dependencies": {
    "@types/requirejs": "^2.1.34",
    "requirejs": "^2.3.6",
    "ts-node": "^10.9.1"
  }
}